---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Technical Due Diligence & AI Strategy Consulting | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Technical Due Diligence & AI Strategy"
    title="Empowering Smarter Investments and Scalable Innovation"
    subtitle="Transcension AI provides deep technical insights and AI strategy consulting to venture capitalists, startups, and enterprises. From assessing feasibility to shaping scalable AI solutions, we enable data-driven decisions and long-term success."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/consulting.jpg',
      alt: 'Technical due diligence and AI strategy consulting by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Unmatched Expertise for High-Stakes Decisions"
    subtitle="With expertise in robotics, IoT, and AI systems, we provide technical due diligence and strategy consulting to uncover hidden risks, validate technologies, and drive successful investments and transformations."
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
