---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Agent-Based AI for Intelligent Systems | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="AI for the Real World"
    title="Transforming Industries with Agent-Based Intelligence"
    subtitle="Transcension AI combines multi-modal data fusion, robotics, drones, and IoT to deliver actionable intelligence across agriculture, logistics, security, and more."
    actions={[
      { variant: 'primary', text: 'Explore Solutions', href: '/#solutions', icon: 'tabler:search' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/intelligent-systems.jpg',
      alt: 'Agent-Based Intelligence for Real-World Applications by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Empowering Industries with AI"
    subtitle="From precision farming and drone-powered monitoring to logistics optimization and security intelligence, our AI platform adapts to diverse operational challenges."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/#industries' },
    ]}
  />
</Layout>
