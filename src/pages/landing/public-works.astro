---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AI for Public Works and Infrastructure Management | Transcension AI',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="AI for Public Works"
    title="Optimizing Public Works with AI-Driven Insights"
    subtitle="Transcension AI empowers public works operations with intelligent systems to monitor infrastructure, manage resources, and improve service delivery efficiently and effectively."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/' },
    ]}
    image={{
      src: '~/assets/images/landing/public-works.jpg',
      alt: 'AI for Public Works by Transcension AI',
    }}
  />

  <CallToAction
    title="Transform Public Works with AI"
    subtitle="From asset monitoring to predictive maintenance and resource optimization, Transcension AI provides the tools needed to modernize public works operations and improve decision-making."
    actions={[{ variant: 'primary', text: 'Get in Touch', href: '/contact', icon: 'tabler:mail' }]}
  />
</Layout>
