---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AI for Security and Defense Operations | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="AI for Security and Defense"
    title="Empowering Security Operations with Agent-Based Intelligence"
    subtitle="Transcension AI integrates advanced AI agents, multi-modal data fusion, and real-time analytics to revolutionize security and defense. From threat detection to operational resilience, our platform provides actionable intelligence for high-stakes environments."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/security.jpg',
      alt: 'AI for Security and Defense Operations by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Revolutionize Security with AI"
    subtitle="Leverage Transcension AIâ€™s agent-based intelligence platform for advanced surveillance, anomaly detection, and threat response. Our solutions integrate seamlessly with existing systems, providing scalable, real-time intelligence for security and defense operations."
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
