---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Agent-Based AI for Industry 4.0 | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="AI for Industry 4.0"
    title="Empowering Manufacturing with Agent-Based Intelligence"
    subtitle="Transcension AI delivers adaptive, AI-powered solutions that optimize production, reduce downtime, and integrate seamlessly into Industry 4.0 environments. From robotics to IoT, our platform transforms data into action."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/industry40.jpg',
      alt: 'AI Solutions for Industry 4.0 by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Transform Manufacturing with AI"
    subtitle="Transcension AI combines robotics, IoT, and AI agents to deliver actionable insights for predictive maintenance, quality control, and supply chain efficiency. Let us help you build smarter, more resilient operations."
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
