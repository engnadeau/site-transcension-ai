---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Agent-Based Robotics and AI for Human-AI Collaboration | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="AI and Robotics for Real-World Intelligence"
    title="Revolutionizing Data-Driven Collaboration with Robotics and AI"
    subtitle="Transcension AI integrates robotics, drones, and AI agents to collect, analyze, and act on multi-modal data. Our solutions power intelligent systems for industrial automation, field operations, and human-AI collaboration."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/robotics.jpg',
      alt: 'Robotics and AI for Data Ingestion by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Empowering Robotics with AI Intelligence"
    subtitle="From autonomous navigation to real-time decision-making, Transcension AI leverages robotics, IoT, and sensor fusion to deliver actionable intelligence. Enable seamless human-AI collaboration and achieve new levels of operational efficiency with our agent-based platform."
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
