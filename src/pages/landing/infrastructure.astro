---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AI for Infrastructure Monitoring & Management | Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="AI for Smarter Infrastructure"
    title="Revolutionizing Infrastructure Monitoring with Agent-Based Intelligence"
    subtitle="Transcension AI provides advanced solutions for real-time infrastructure monitoring, predictive maintenance, and optimization of construction and operational workflows. Our AI-driven platform combines robotics, IoT, and multi-modal data to deliver actionable insights."
    actions={[
      { variant: 'primary', text: 'Schedule a Consultation', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{
      src: '~/assets/images/landing/infrastructure.jpg',
      alt: 'AI for Smarter Infrastructure Monitoring by Transcension AI',
    }}
  />

  <!-- Call to Action Section -->
  <CallToAction
    title="Transform Infrastructure with AI"
    subtitle="Leverage Transcension AI's expertise in robotics, IoT, and AI agents to enhance infrastructure resilience, optimize maintenance, and improve operational efficiency. Partner with us to modernize your infrastructure management systems."
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
