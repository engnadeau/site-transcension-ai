---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Transcension AI - Scalable AI for Real-World Impact',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        { variant: 'secondary', text: 'Contact Us', href: '/contact' },
        { variant: 'primary', text: 'Get Started', href: '#platform' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    id="hero"
    tagline="Unlock Scalable Growth with AI"
    actions={[
      { variant: 'primary', text: 'Discover Our Platform', href: '#platform' },
      { text: 'Learn More', href: '#how-we-drive-impact' },
    ]}
    image={{
      src: '~/assets/images/hero.jpg',
      alt: 'Transcension AI - Scalable AI Solutions',
    }}
  >
    <Fragment slot="title">
      Empowering <span class="text-accent">Real-World Growth</span> with Scalable AI
    </Fragment>
    <Fragment slot="subtitle">
      Transcension AI combines practical insights with modular platforms to deliver AI solutions that transform
      operations, enable innovation, and drive measurable impact.
    </Fragment>
  </Hero2>

  <!-- Features Section -->
  <Features
    id="platform"
    title="Our Scalable AI Platform"
    subtitle="Built for flexibility, designed for impact."
    columns={2}
    items={[
      {
        title: 'Modular Tools',
        description: 'Customizable platforms that address operational challenges and scale across industries.',
        icon: 'tabler:tool',
      },
      {
        title: '80/20 Solutions',
        description: 'Delivering practical, enterprise-grade functionality at a fraction of the cost.',
        icon: 'tabler:scale',
      },
      {
        title: 'Insights into Innovation',
        description: 'Turning real-world challenges into redeployable tools for rapid growth.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Private Equity-Ready',
        description: 'Designed to enable portfolio-wide transformation and operational efficiency.',
        icon: 'tabler:building-skyscraper',
      },
    ]}
  />

  <!-- Use Cases -->
  <Content
    id="use-case-robotics"
    title="Use Cases"
    subtitle="Explore how Transcension AI leverages cutting-edge technology to solve critical business challenges."
    isReversed
    items={[
      {
        description: `Leverage mobile robots and computer vision to bring Industry 4.0 to life. Gain real-time intelligence on your assets, enable predictive maintenance, and streamline inspections for smarter industrial operations.`,
      },
    ]}
    image={{
      src: '~/assets/images/robotics.jpg',
      alt: 'Robotics, Computer Vision, and AI in Industry 4.0',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Robotics, Computer Vision, and Industry 4.0
      </h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-operations"
    isAfterContent={true}
    items={[
      {
        description: `Transform operations with AI-powered insights from time series data. Enable predictive inventory, maintenance, and resource planning to supercharge analysts and operators with smarter, faster decision-making.`,
      },
    ]}
    image={{
      src: '~/assets/images/operations.jpg',
      alt: 'Operational Intelligence and Forecasting',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Operational Intelligence and Forecasting
      </h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-llm"
    isReversed
    isAfterContent={true}
    items={[
      {
        description: `Unlock insights from unstructured data with cutting-edge AI. Streamline workflows like RFP generation, allowing AI to handle the grunt work so humans can focus on creativity and high-impact tasks.`,
      },
    ]}
    image={{
      src: '~/assets/images/llm.jpg',
      alt: 'Generative AI for Business Insights',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Large Language Models and Generative AI
      </h3>
    </Fragment>
  </Content>

  <!-- Steps Section -->
  <Features2
    id="how-we-drive-impact"
    title="How We Drive Impact"
    subtitle="Our approach combines actionable insights and scalable solutions to deliver real-world results."
    items={[
      {
        title: 'Understanding Challenges',
        description:
          'We identify key transformation opportunities by analyzing your businessâ€™s unique needs and challenges.',
        icon: 'tabler:search',
      },
      {
        title: 'Building Scalable Solutions',
        description: 'Our modular platforms provide flexible, impactful tools tailored to your operational goals.',
        icon: 'tabler:settings',
      },
      {
        title: 'Driving Long-Term Growth',
        description:
          'We deliver solutions that enable sustained innovation, operational excellence, and future readiness.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Call To Action -->
  <CallToAction
    id="cta"
    title="Ready to Scale Your Business with AI?"
    subtitle="Join the growing number of businesses transforming with Transcension AI."
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
      },
    ]}
  />
</Layout>
