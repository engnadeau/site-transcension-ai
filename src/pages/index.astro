---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Transcension AI - Data-Driven AI Insights for Intelligent Systems',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        { variant: 'secondary', text: 'Contact Us', href: '/contact' },
        { variant: 'primary', text: 'Get Started', href: '#platform' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    id="hero"
    tagline="Unlock the Power of Operational Data"
    actions={[
      { variant: 'primary', text: 'Discover Our Solutions', href: '#platform' },
      { text: 'Learn More', href: '#how-we-drive-impact' },
    ]}
    image={{
      src: '~/assets/images/hero.jpg',
      alt: 'Transcension AI - Data-Driven Insights',
    }}
  >
    <Fragment slot="title">
      Transforming <span class="text-accent">Intelligent Systems</span> with Data
    </Fragment>
    <Fragment slot="subtitle">
      Transcension AI enables industries to harness the vast potential of operational data through AI-driven insights,
      empowering organizations to make smarter decisions and achieve unparalleled efficiency.
    </Fragment>
  </Hero2>

  <!-- Features Section -->
  <Features
    id="platform"
    title="Our AI-Driven Solutions"
    subtitle="Innovating at the intersection of data, intelligence, and action."
    columns={2}
    items={[
      {
        title: 'Data Transformation',
        description: 'Ingest, transform, and make sense of sensor and operational data at scale.',
        icon: 'tabler:database',
      },
      {
        title: 'Computer Vision Models',
        description: 'Deploy powerful vision systems for real-time detection, tracking, and analysis.',
        icon: 'tabler:camera',
      },
      {
        title: 'Operational Insights',
        description: 'Convert raw data into actionable intelligence for smarter decision-making.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Edge-Optimized AI',
        description: 'Embedded solutions tailored for robotics, drones, and industrial systems.',
        icon: 'tabler:cpu',
      },
    ]}
  />

  <!-- Use Cases -->
  <Content
    id="use-case-robotics"
    title="Use Cases"
    subtitle="Unlock the full potential of robotics, drones, and intelligent systems."
    isReversed
    items={[
      {
        description: `Revolutionize Industry 4.0 with AI-powered robotics and drones. Enable predictive maintenance, automate inspections, and enhance safety with real-time operational insights.`,
      },
    ]}
    image={{
      src: '~/assets/images/robotics.jpg',
      alt: 'Robotics and AI in Industry 4.0',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Robotics, Drones, and Industry 4.0
      </h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-security"
    isAfterContent={true}
    items={[
      {
        description: `Enhance security and defense with AI-driven surveillance and threat detection. From border monitoring to critical infrastructure protection, our solutions deliver unmatched precision and scalability.`,
      },
    ]}
    image={{
      src: '~/assets/images/security.jpg',
      alt: 'AI for Security and Defense',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Security and Defense</h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-agtech"
    isReversed
    isAfterContent={true}
    items={[
      {
        description: `Empower agriculture with precision AI. Monitor crops, optimize resource use, and detect anomalies with drone-based insights tailored for modern farming needs.`,
      },
    ]}
    image={{
      src: '~/assets/images/agtech.jpg',
      alt: 'AI in Agriculture and Precision Farming',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">AgTech and Precision Farming</h3>
    </Fragment>
  </Content>

  <!-- Steps Section -->
  <Features2
    id="how-we-drive-impact"
    title="How We Drive Impact"
    subtitle="Empowering industries with data-driven intelligence."
    items={[
      {
        title: 'Data Integration',
        description: 'We ingest and consolidate data from diverse sources for seamless analysis.',
        icon: 'tabler:arrow-merge-both',
      },
      {
        title: 'Actionable Analytics',
        description: 'Our platforms transform raw data into insights that drive efficiency and growth.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Scalable Solutions',
        description: 'From small pilots to full-scale deployments, our tools grow with your needs.',
        icon: 'tabler:arrows-maximize',
      },
    ]}
  />

  <!-- Call To Action -->
  <CallToAction
    id="cta"
    title="Ready to Leverage Data for Smarter Systems?"
    subtitle="Partner with Transcension AI to unlock the potential of your operational data and drive transformative results."
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
      },
    ]}
  />
</Layout>
