---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Transcension AI - Elevate Your Business with AI',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        { variant: 'secondary', text: 'Contact Us', href: '#contact' },
        { variant: 'primary', text: 'Get Started', href: '#services' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    tagline="Transcend to the Future with AI"
    actions={[
      { variant: 'primary', text: 'Explore Services', href: '#services' },
      { text: 'Learn More', href: '#vision' },
    ]}
    image={{
      src: '~/assets/images/hero.jpg',
      alt: 'Astronaut Symbolizing Transcension AI',
    }}
  >
    <Fragment slot="title">
      Empowering Businesses to <span class="text-accent">Transcend</span> with AI
    </Fragment>
    <Fragment slot="subtitle">
      Guiding companies into the AI age with expert consulting, transformative solutions, and a future-ready platform.
    </Fragment>
  </Hero2>

  <!-- Features Section -->
  <Features
    id="services"
    title="Our Expertise"
    subtitle="Tailored AI solutions to propel your business into the future."
    columns={2}
    items={[
      {
        title: 'AI Consulting',
        description: 'Custom AI strategies that align with your business goals, unlocking new efficiencies and growth.',
        icon: 'tabler:brain',
      },
      {
        title: 'Scalable AI Solutions',
        description: 'Future-ready solutions for seamless AI adoption within small and medium enterprises.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Platform in Development',
        description: 'Creating tools to streamline AI deployment and elevate business operations.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Innovation & Strategy',
        description: 'Guidance to transcend traditional tech limitations with cutting-edge innovation.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Vision Section -->
  <Content
    title="Our Vision"
    subtitle="Building the AI Platform of Tomorrow"
    isReversed
    items={[
      {
        title: 'Future-Driven AI',
        description:
          'Our mission is to empower companies with the tools to seamlessly integrate AI. We envision a platform that simplifies AI deployment, giving small to medium enterprises a competitive edge in the digital era.',
      },
    ]}
    image={{
      src: '~/assets/images/hero.jpg',
      alt: 'Future AI Platform Concept',
    }}
  />

  <!-- Pricing Section -->
  <Pricing
    title="Flexible Consulting Packages"
    prices={[
      {
        title: 'Starter',
        subtitle: 'Basic AI strategy sessions',
        price: '500',
        period: 'per session',
        callToAction: {
          text: 'Get Started',
          href: '#contact',
        },
      },
      {
        title: 'Advanced',
        subtitle: 'In-depth AI implementation plans',
        price: '1500',
        period: 'per month',
        hasRibbon: true,
        ribbonTitle: 'Popular',
        callToAction: {
          text: 'Contact Us',
          href: '#contact',
        },
      },
      {
        title: 'Enterprise',
        subtitle: 'Comprehensive, ongoing consulting',
        price: '5000',
        period: 'per month',
        callToAction: {
          text: 'Request a Quote',
          href: '#contact',
        },
      },
    ]}
  />

  <!-- FAQs Section -->
  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'How can AI help my business?',
        description:
          'AI can streamline operations, enhance customer experiences, and provide valuable insights for growth.',
      },
      {
        title: 'What industries do you specialize in?',
        description:
          'We work with a wide range of industries, particularly SMBs and startups looking to adopt AI-driven solutions.',
      },
      {
        title: 'What does the consulting process involve?',
        description:
          'Our consulting process includes strategy sessions, implementation plans, and support for AI adoption.',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Stay informed with AstroWind's blog"
    information={`Explore our collection of articles, guides, and tutorials on web development, design trends, and using AstroWind effectively for your projects.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <!-- Contact Section -->
  <Steps2
    title="Get in Touch"
    subtitle="Ready to take your business to the next level? Contact us today."
    callToAction={{
      text: 'Contact Us',
      href: '#contact',
    }}
    items={[
      {
        title: 'Email',
        description: 'info@transcension.ai',
        icon: 'tabler:mail',
      },
      {
        title: 'Phone',
        description: '+1 (555) 123-4567',
        icon: 'tabler:phone',
      },
      {
        title: 'LinkedIn',
        description: 'Follow Us',
        icon: 'tabler:brand-linkedin',
      },
    ]}
  />
</Layout>
