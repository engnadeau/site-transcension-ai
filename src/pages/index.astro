---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import { headerData } from '~/navigation';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Transcension AI - Strategic AI & Emerging Tech Consulting',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        { variant: 'secondary', text: 'Contact Us', href: '/contact' },
        { variant: 'primary', text: 'Get Started', href: '#services' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    id="hero"
    tagline="Strategic AI & Emerging Tech Consulting"
    actions={[
      { variant: 'primary', text: 'Explore Expertise', href: '#services' },
      { text: 'Learn More', href: '#why-transcension' },
    ]}
    image={{
      src: '~/assets/images/hero.jpg',
      alt: 'Transcension AI - AI Strategy and Consulting',
    }}
  >
    <Fragment slot="title">
      High-Impact AI & Emerging Tech Advisory for <span class="text-accent">Investors, Enterprises, and Innovators</span
      >
    </Fragment>
    <Fragment slot="subtitle">
      Transcension AI provides elite consulting for AI, robotics, IoT, data, and emerging technologies. We partner with
      VCs, investment banks, and corporate innovation teams to deliver deep industry insights, technology due diligence,
      and strategic advisory services.
    </Fragment>
  </Hero2>

  <!-- Services Section -->
  <Features
    id="services"
    title="Expert Consulting Services"
    subtitle="Helping businesses navigate AI, deep tech, and disruptive innovation."
    columns={2}
    items={[
      {
        title: 'AI & Emerging Tech Strategy',
        description:
          'Developing tailored technology strategies that align with business objectives and industry trends.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Due Diligence & Market Analysis',
        description: 'Supporting VCs, investment firms, and enterprises with expert assessments of AI investments.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Corporate Innovation & R&D',
        description:
          'Guiding corporate innovation teams to adopt and integrate cutting-edge AI and emerging technologies.',
        icon: 'tabler:building',
      },
      {
        title: 'Speaking & Thought Leadership',
        description: 'Engaging keynotes, panels, and executive training on AI, robotics, and the future of technology.',
        icon: 'tabler:microphone',
      },
    ]}
  />

  <!-- Why Transcension AI -->
  <Content
    id="why-transcension"
    title="Why Work with Transcension AI?"
    subtitle="Deep expertise. Strategic insights. Proven impact."
    isReversed
    items={[
      {
        description: `With a track record of advising top-tier investors, enterprises, and tech leaders, Transcension AI delivers unmatched expertise in AI strategy, due diligence, and innovation consulting. Our insights drive high-impact decisions and transformational outcomes.`,
      },
    ]}
    image={{
      src: '~/assets/images/speaking.jpg',
      alt: 'AI Strategy and Consulting',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Elite Advisory for High-Stakes AI & Tech Decisions
      </h3>
    </Fragment>
  </Content>

  <!-- Impact Section -->
  <Features2
    id="how-we-drive-impact"
    title="Delivering Impact at the Highest Level"
    subtitle="Transcension AI provides insight-driven advisory for complex challenges."
    items={[
      {
        title: 'Strategic Roadmaps',
        description: 'Helping organizations define their AI and deep tech strategy for sustainable success.',
        icon: 'tabler:map',
      },
      {
        title: 'Investor-Grade Due Diligence',
        description: 'Identifying risks and opportunities in AI and emerging tech investments.',
        icon: 'tabler:search',
      },
      {
        title: 'High-Value Corporate Innovation',
        description: 'Advising Fortune 500s and growth-stage companies on leveraging AI for competitive advantage.',
        icon: 'tabler:briefcase',
      },
    ]}
  />

  <!-- Call To Action -->
  <CallToAction
    id="cta"
    title="Ready to Elevate Your AI & Tech Strategy?"
    subtitle="Connect with Transcension AI for elite advisory and insights."
    actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]}
  />
</Layout>
