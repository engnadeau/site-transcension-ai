---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Transcension AI - Agent-Based Intelligence for Complex Systems',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        { variant: 'secondary', text: 'Contact Us', href: '/contact' },
        { variant: 'primary', text: 'Get Started', href: '#solutions' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero Section -->
  <Hero2
    id="hero"
    tagline="Transforming Operations with Agent-Based AI"
    actions={[
      { variant: 'primary', text: 'Discover the Platform', href: '#solutions' },
      { text: 'Learn More', href: '#why-transcension' },
    ]}
    image={{
      src: '~/assets/images/homepage/hero.jpg',
      alt: 'Transcension AI - Agent-Based Intelligence',
    }}
  >
    <Fragment slot="title">
      Agent-Based Intelligence for the <span class="text-accent">Physical and Digital Worlds</span>
    </Fragment>
    <Fragment slot="subtitle">
      Transcension AI combines multi-modal data fusion with human-AI collaboration to create adaptive intelligence for
      operations, security, and decision-making. From robotics and IoT to sensor-driven systems, our agents transform
      fragmented data into actionable insights.
    </Fragment>
  </Hero2>

  <!-- Solutions Section -->
  <Features
    id="solutions"
    title="Our Platform"
    subtitle="A modular, adaptive AI platform built for intelligent systems."
    columns={2}
    items={[
      {
        title: 'Agent-Based Architecture',
        description:
          'Deploy specialized AI agents that collaborate to optimize workflows, monitor environments, and drive decisions.',
        icon: 'tabler:brain',
      },
      {
        title: 'Multi-Modal Data Fusion',
        description: 'Integrate and analyze data from sensors, robotics, IoT devices, drones, and traditional systems.',
        icon: 'tabler:arrows-split',
      },
      {
        title: 'Human-AI Collaboration',
        description:
          'Empower teams with decision-ready insights while enabling AI agents to autonomously handle routine operations.',
        icon: 'tabler:users',
      },
      {
        title: 'Scalable Intelligence',
        description: 'Start with targeted use cases and scale seamlessly across complex environments and domains.',
        icon: 'tabler:layers-linked',
      },
    ]}
  />

  <!-- Problem Space -->
  <Content
    id="why-transcension"
    title="Why Agent-Based Intelligence?"
    subtitle="A new approach to operational intelligence."
    isReversed
    items={[
      {
        description: `Organizations face overwhelming data complexity across robotics, IoT devices, drones, and traditional systems. Transcension AI’s agent-based platform simplifies this chaos by creating autonomous agents that analyze, communicate, and act—delivering real-time insights and streamlining operations.`,
      },
    ]}
    image={{
      src: '~/assets/images/homepage/data.jpg',
      alt: 'AI Problem Space',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Intelligence Across All Data Modalities
      </h3>
    </Fragment>
  </Content>

  <!-- Use Cases -->
  <Content
    id="use-case-intelligent-systems"
    items={[
      {
        description: `Enable intelligent systems that seamlessly combine robotics, IoT devices, drones, and sensors. Optimize workflows, monitor operations, and predict disruptions using coordinated AI agents designed to adapt to your environment.`,
      },
    ]}
    image={{
      src: '~/assets/images/homepage/robotics.jpg',
      alt: 'AI for Intelligent Systems',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Intelligent Systems</h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-security"
    isReversed
    isAfterContent={true}
    items={[
      {
        description: `Enhance security and defense through AI-driven situational awareness. Monitor perimeters, detect anomalies, and automate threat responses with precision and scalability.`,
      },
    ]}
    image={{
      src: '~/assets/images/homepage/security.jpg',
      alt: 'AI for Security and Defense',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Security and Defense</h3>
    </Fragment>
  </Content>

  <Content
    id="use-case-logistics"
    items={[
      {
        description: `Streamline supply chains with predictive logistics management. Optimize routes, track assets, and mitigate disruptions using AI agents that adapt to changing conditions.`,
      },
    ]}
    image={{
      src: '~/assets/images/homepage/logistics.jpg',
      alt: 'AI for Logistics Optimization',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Logistics & Supply Chain</h3>
    </Fragment>
  </Content>

  <!-- Impact Section -->
  <Features2
    id="how-we-drive-impact"
    title="How We Deliver Impact"
    subtitle="AI agents for scalable intelligence."
    items={[
      {
        title: 'Real-Time Collaboration',
        description:
          'AI agents continuously monitor, analyze, and act, ensuring seamless operations across environments.',
        icon: 'tabler:clock',
      },
      {
        title: 'Data Fusion and Integration',
        description: 'Fuse data from multiple modalities—vision, sensors, and IoT—for a unified operational view.',
        icon: 'tabler:database',
      },
      {
        title: 'Actionable Insights at Scale',
        description: 'Transform raw data into predictive insights, enabling fast decisions and automated responses.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Call To Action -->
  <CallToAction
    id="cta"
    title="Ready to Build Intelligent Systems?"
    subtitle="Discover how Transcension AI can optimize your operations with agent-based intelligence."
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
  />
</Layout>
