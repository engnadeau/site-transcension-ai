---
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About Transcension AI"
    image={{
      src: '~/assets/images/robotics.jpg',
      alt: 'AI Innovation',
    }}
  >
    <Fragment slot="title">
      Redefining Business with <br />
      <span class="text-accent dark:text-white highlight">Scalable AI Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      Transcension AI was founded by Dr. Nicholas Nadeau, an AI and emerging tech innovator, to bring scalable,
      transformative AI solutions to businesses of all sizes. Our mission is to make AI practical, impactful, and
      accessible for real-world problems.
    </Fragment>
  </Hero>

  <!-- Values Section -->
  <Features
    id="values"
    title="Our Core Values"
    subtitle="What drives us every day"
    columns={3}
    items={[
      {
        title: 'Customer Focus',
        description:
          'We prioritize understanding your challenges and delivering tailored solutions that drive real results.',
        icon: 'tabler:user',
      },
      {
        title: 'Innovation',
        description:
          'We embrace the latest technologies to transform how businesses operate, unlocking their full potential.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Scalability',
        description: 'Our solutions are designed to grow with you, enabling long-term success and adaptability.',
        icon: 'tabler:trending-up',
      },
    ]}
  />

  <!-- Vision & Mission Section -->
  <Features
    id="vision-mission"
    title="Vision & Mission"
    subtitle="Our purpose and goals"
    columns={2}
    items={[
      {
        title: 'Vision',
        description:
          'To democratize AI and data solutions, making them accessible and impactful for businesses of every size.',
        icon: 'tabler:eye',
      },
      {
        title: 'Mission',
        description:
          'To empower businesses with modular AI platforms that solve complex challenges, drive innovation, and deliver measurable results.',
        icon: 'tabler:target',
      },
    ]}
  />
</Layout>
