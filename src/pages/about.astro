---
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About Transcension AI"
    image={{
      src: '~/assets/images/robotics.jpg',
      alt: 'AI and Robotics Innovation',
    }}
  >
    <Fragment slot="title">
      Transforming Industries with <br />
      <span class="text-accent dark:text-white highlight">Data-Driven AI Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      Transcension AI, founded by Dr. Nicholas Nadeau, pioneers the development of AI-driven tools, platforms, and
      solutions that extract actionable insights from operational data. We empower industries to harness the exponential
      growth of data collected by drones, robotics, and intelligent systems to drive efficiency, scalability, and
      impact.
    </Fragment>
  </Hero>

  <!-- Values Section -->
  <Features
    id="values"
    title="Our Core Values"
    subtitle="What drives us every day"
    columns={3}
    items={[
      {
        title: 'Data-Driven Excellence',
        description:
          'We strive to deliver exceptional value by transforming raw data into meaningful, actionable insights.',
        icon: 'tabler:database',
      },
      {
        title: 'Innovation',
        description:
          'We embrace cutting-edge AI and embedded technologies to solve challenges traditional systems cannot.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Scalability',
        description: 'Our modular platforms are designed to evolve with your needs, ensuring long-term success.',
        icon: 'tabler:trending-up',
      },
    ]}
  />

  <!-- Vision & Mission Section -->
  <Features
    id="vision-mission"
    title="Vision & Mission"
    subtitle="Our purpose and goals"
    columns={2}
    items={[
      {
        title: 'Vision',
        description:
          'To lead the future of AI-driven solutions by transforming operational data into actionable intelligence, building smarter, data-enabled systems for industries worldwide.',
        icon: 'tabler:eye',
      },
      {
        title: 'Mission',
        description:
          'To empower organizations with scalable AI tools and platforms that revolutionize decision-making, automate inefficiencies, and drive real-world impact.',
        icon: 'tabler:target',
      },
    ]}
  />
</Layout>
