---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Transcension AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About Transcension AI"
    image={{
      src: '~/assets/images/intelligent-systems.jpg',
      alt: 'AI and Emerging Tech Consulting',
    }}
  >
    <Fragment slot="title">
      Expert Consulting in <span class="text-accent">AI, Emerging Technologies & Innovation</span>
    </Fragment>

    <Fragment slot="subtitle">
      Transcension AI, founded by <a href="https://www.linkedin.com/in/engnadeau" target="_blank">Dr. Nicholas Nadeau</a
      >, provides elite consulting services in AI, robotics, IoT, and emerging technologies. We work with venture
      capital, investment banks, and corporate innovation teams to deliver deep industry insights, technology due
      diligence, and strategic roadmaps that shape the future of AI-driven industries.
    </Fragment>
  </Hero>

  <!-- Values Section -->
  <Features
    id="values"
    title="Our Core Values"
    subtitle="Guiding principles that define our impact"
    columns={3}
    items={[
      {
        title: 'Strategic Expertise',
        description:
          'We provide unparalleled insight into AI, emerging tech, and market dynamics to empower high-stakes decision-making.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Deep Tech Understanding',
        description:
          'Our hands-on experience with AI, robotics, and IoT ensures we provide pragmatic and effective guidance.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Selective Engagement',
        description: 'We work exclusively with high-value clients who seek strategic advisory at the highest level.',
        icon: 'tabler:contract',
      },
    ]}
  />

  <!-- Vision & Mission Section -->
  <Features
    id="vision-mission"
    title="Vision & Mission"
    subtitle="Our purpose and aspirations"
    columns={2}
    items={[
      {
        title: 'Vision',
        description:
          'To be the premier AI and emerging tech consultancy, helping organizations navigate disruption and unlock transformative potential.',
        icon: 'tabler:eye',
      },
      {
        title: 'Mission',
        description:
          'To provide strategic advisory, technology insights, and innovation leadership to investors, enterprises, and tech-driven organizations worldwide.',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Call To Action -->
  <CallToAction
    id="cta"
    title="Ready to Elevate Your AI Strategy?"
    subtitle="Connect with Transcension AI for elite advisory and insights."
    actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]}
  />
</Layout>
